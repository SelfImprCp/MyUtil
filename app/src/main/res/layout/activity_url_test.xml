<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

     <com.cp.mylibrary.custom.TitleBarView

           android:id="@+id/url_test_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"> </com.cp.mylibrary.custom.TitleBarView>


     <com.cp.mylibrary.custom.CPScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"

               android:orientation="vertical">

               <TextView
                    android:id="@+id/url_test_textview"
                   android:layout_width="wrap_content"
                    android:layout_margin="@dimen/space_15"
                   android:layout_height="wrap_content" />



               <TextView
                   android:id="@+id/url_test_backcolor"
                   android:layout_width="wrap_content"
                   android:layout_margin="@dimen/space_15"
                   android:layout_height="wrap_content" />




          </LinearLayout>

     </com.cp.mylibrary.custom.CPScrollView>





</LinearLayout>