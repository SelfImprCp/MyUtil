<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp"
    android:layout_marginTop="100dp"
    android:background="@drawable/login_layout_btn_bg_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/base_tishi_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="标题:"
        android:textColor="@color/black_color_30"
        android:textSize="22sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray_cp_util" />

    <TextView
        android:id="@+id/base_tishi_dialog_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="@dimen/space_20"
        android:paddingTop="@dimen/space_20"
        android:layout_marginTop="10dp"

        android:text="内容提示内容提示内容提示内容提示内容提示内容提示内容提示内容提示内容提示内 "
        android:textColor="@color/black_color_30"
        android:textSize="16sp"
        android:visibility="visible" />




    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginTop="@dimen/space_15"
        android:background="@color/gray_cp_util"></View>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:orientation="horizontal">
 

        

        <TextView
            android:id="@+id/base_tishi_dialog_sure_btn_b"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"

            android:text="确定"
            android:textColor="#4ba6ee" />
    </LinearLayout>

</LinearLayout>